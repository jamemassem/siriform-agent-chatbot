{
  "openapi": "3.0.0",
  "info": {
    "title": "SiriForm Agent Chatbot API",
    "version": "1.0.0",
    "description": "API for interacting with the SiriForm agent."
  },
  "paths": {
    "/api/v1/chat": {
      "post": {
        "summary": "Send a message to the chat agent",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string"
                  },
                  "session_id": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Agent's response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "response": {
                      "type": "string"
                    },
                    "form_data": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/form-schema/{form_name}": {
      "get": {
        "summary": "Retrieve a form schema",
        "parameters": [
          {
            "name": "form_name",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "The JSON schema for the requested form.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    }
  }
}
