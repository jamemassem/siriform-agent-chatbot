#!/bin/sh
# Git pre-commit hook to prevent committing secrets
# 
# To install:
#   chmod +x scripts/check-secrets.py
#   cp scripts/pre-commit .git/hooks/pre-commit
#   chmod +x .git/hooks/pre-commit

echo "üîê Running pre-commit security checks..."

# Run the Python security check script
python scripts/check-secrets.py

if [ $? -ne 0 ]; then
    echo ""
    echo "‚ùå Commit rejected due to security issues!"
    echo "Please fix the issues above before committing."
    echo ""
    exit 1
fi

echo "‚úÖ Security checks passed. Proceeding with commit..."
exit 0
